NODE_ENV=production

AUTH_SECRET=__AUTH_SECRET__

SECRET_ENCRYPTION_KEY=__SECRET_ENCRYPTION_KEY__
CRON_JOB_API_KEY=__CRON_JOB_API_KEY__

LOG_LEVEL='info'

DB_DRIVER='better-sqlite3'
DB_URL='__INSTALL_DIR__/db.sqlite'

# The following is an example on how to use the node-postgres driver:
# DB_DRIVER='node-postgres'
# DB_URL='postgres://user:password@host:port/database'

TURBO_TELEMETRY_DISABLED=1

UNSAFE_ENABLE_MOCK_INTEGRATION=true

# Next Auth
# You can generate a new secret on the command line with:
# openssl rand -base64 32
# https://next-auth.js.org/configuration/options#secret
NEXTAUTH_URL=https://__DOMAIN__
PORT=__PORT__

NEXTAUTH_SECRET=__SECRET__

# Disable analytics
NEXT_PUBLIC_DISABLE_ANALYTICS=true

DEFAULT_COLOR_SCHEME=light

TZ=__TIMEZONE__

REDIS_IS_EXTERNAL="true"
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DATABASE_INDEX=__REDIS_DB__

# These vars do not exist in homarr config, I let them here for debugging and may be ask to make these ports configurable in upstream
#TASKS_PORT=__PORT_TASKS__
PORT_WEBSOCKET=__PORT_WEBSOCKET__

# LDAP
AUTH_PROVIDERS="ldap"
AUTH_LDAP_BIND_DN=""
AUTH_LDAP_BIND_PASSWORD=""
AUTH_LDAP_URI="ldap://localhost:389"
AUTH_LDAP_BASE="ou=users,dc=yunohost,dc=org"
AUTH_LDAP_USERNAME_ATTRIBUTE="uid"
AUTH_LDAP_USER_MAIL_ATTRIBUTE="mail"

AUTH_LDAP_USERNAME_FILTER_EXTRA_ARG="(&(objectclass=posixAccount)(permission=cn=__APP__.main,ou=permission,dc=yunohost,dc=org))"
